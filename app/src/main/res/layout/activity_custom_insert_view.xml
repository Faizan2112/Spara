<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:background="@color/colorAccent"
        >


        <TextView
            android:id="@+id/insert_expenseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ExpenseName"
            android:textColor="@color/primary_text_material_light"
            android:textSize="25sp"
            />
        <TextView
            android:id="@+id/insert_expenseCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ExpenseCost"
            android:layout_alignParentBottom="true"
            android:textColor="@color/primary_text_material_light"
            android:textSize="25sp"

            />
        <TextView android:id="@+id/retrieve_expense_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Date"
            android:textColor="@color/primary_text_material_light"
            android:textSize="20dp"
            />
        <TextView android:id="@+id/retrieve_expense_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="20:30"
            android:textColor="@color/primary_text_material_light"
            android:textSize="20dp"
            />

    </RelativeLayout>
