<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.ExpenseFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/wallet_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cardview_headsize200"
                card_view:cardElevation="10dp"
                >
                <RelativeLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    >
                    <TextView
                        android:id="@+id/wallet_header_text"
                        android:layout_height="@dimen/size_of_relativelayout_add_resurce_box50"
                        android:layout_width="match_parent"
                        android:text="WALLET"
                        android:textSize="@dimen/textheader18"
                        android:gravity="center"
                        android:background="@color/colorAccent"
                        android:textColor="@color/cardview_light_background"
                        />

                    <ImageView
                        android:id="@+id/wallet_header_image"
                        android:layout_below="@+id/wallet_header_text"
                        android:layout_width="100dp"
                        android:layout_height="250dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/pie"

                        />
                    <TextView
                        android:id="@+id/wallet_user_name"
                        android:layout_below="@id/wallet_header_text"
                        android:layout_toRightOf="@id/wallet_header_image"
                        android:layout_width="200dp"
                        android:layout_height="@dimen/size_of_relativelayout_add_resurce_box50"
                        android:hint="Username Sachin"
                        android:textColorHint="@color/colorAccent"
                        />
                    <TextView
                    android:id="@+id/wallet_total_amount"
                    android:layout_below="@id/wallet_user_name"
                    android:layout_toRightOf="@id/wallet_header_image"
                    android:layout_width="200dp"
                    android:layout_height="@dimen/size_of_relativelayout_add_resurce_box50"
                    android:hint="Total amount $ 10000"
                    android:textColorHint="@color/colorAccent"
                    />
                    <TextView
                        android:id="@+id/wallet_total_amount_spend"
                        android:layout_below="@id/wallet_total_amount"
                        android:layout_toRightOf="@id/wallet_header_image"
                        android:layout_width="200dp"
                        android:layout_height="@dimen/size_of_relativelayout_add_resurce_box50"
                        android:hint="Total amount $ 1500"
                        android:textColorHint="@color/colorAccent"
                        />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:id="@+id/wallet_getGoogle_wallet"
                android:layout_below="@+id/wallet_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_of_relativelayout_add_resurce_box50"
                android:layout_marginTop="10dp"
                android:background="@color/backgroundrelative"
                android:padding="@dimen/padding5"

                >

                <TextView
                    android:id="@+id/wallet_google_wallet_textview"
                    android:layout_width="310dp"
                    android:layout_height="40dp"
                    android:text="Google Wallet Card"
                    android:gravity="center"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    />
                <ImageButton
                    android:id="@+id/wallet_google_wallet_icon"
                    android:layout_width="@dimen/round_button40"
                    android:layout_height="@dimen/round_button40"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    style="@style/FloatingActionButton"
                    android:src="@drawable/plus_small"

                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/wallet_send_money_for_free"
                android:layout_below="@+id/wallet_getGoogle_wallet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_of_relativelayout_add_resurce_box50"
                android:padding="@dimen/padding5"
                android:background="@color/backgroundrelative">

                <TextView
                    android:id="@+id/wallet_send_money_for_free_text"
                    android:layout_width="310dp"
                    android:layout_height="40dp"
                    android:text="Send Money For free"
                    android:gravity="center"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>


                <ImageButton
                    android:id="@+id/wallet_send_money_for_free_icon"
                    android:layout_width="@dimen/round_button40"
                    android:layout_height="@dimen/round_button40"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    style="@style/FloatingActionButton"
                    android:src="@drawable/plus_small"


                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/wallet_use_your_gift_card"
                android:layout_below="@+id/wallet_send_money_for_free"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_of_relativelayout_add_resurce_box50"
                android:padding="@dimen/padding5"
                android:background="@color/backgroundrelative">

                <TextView
                    android:id="@+id/wallet_use_your_gift_card_text"
                    android:layout_width="310dp"
                    android:layout_height="40dp"
                    android:text="Use Your Gift Card"
                    android:gravity="center"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>

                <ImageButton
                    android:id="@+id/wallet_use_your_gift_card_icon"
                    android:layout_width="@dimen/round_button40"
                    android:layout_height="@dimen/round_button40"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    style="@style/FloatingActionButton"
                    android:src="@drawable/plus_small"

                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/wallet_any_loyalty_program"
                android:layout_below="@+id/wallet_use_your_gift_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_of_relativelayout_add_resurce_box50"
                android:padding="@dimen/padding5"
                android:background="@color/backgroundrelative">

                <TextView
                    android:id="@+id/wallet_any_loyalty_program_textview"
                    android:layout_width="310dp"
                    android:layout_height="40dp"
                    android:text="Send Money For free"
                    android:gravity="center"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>
                <ImageButton
                    android:id="@+id/wallet_any_loyalty_program_icon"
                    android:layout_width="@dimen/round_button40"
                    android:layout_height="@dimen/round_button40"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    style="@style/FloatingActionButton"
                    android:src="@drawable/plus_small"/>
            </RelativeLayout>


            />
            <ImageButton
                android:id="@+id/wallet_float_button"
                android:layout_below="@+id/wallet_any_loyalty_program"
                android:layout_width="@dimen/round_button56"
                android:layout_height="@dimen/round_button56"
                android:layout_marginTop="70dp"
                style="@style/FloatingActionButton"
                android:src="@drawable/plus"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                />
            <ImageButton
                android:id="@+id/wallet_float_button_send"
                android:layout_below="@+id/wallet_any_loyalty_program"
                android:layout_width="@dimen/round_button40"
                android:layout_height="@dimen/round_button40"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="80dp"
                style="@style/FloatingActionButton"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                />
            <ImageButton
                android:id="@+id/wallet_float_button_request"
                android:layout_below="@+id/wallet_any_loyalty_program"
                android:layout_width="@dimen/round_button40"
                android:layout_height="@dimen/round_button40"
                android:layout_marginTop="70dp"
                android:layout_marginRight="80dp"
                style="@style/FloatingActionButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                />
            <ImageButton
                android:id="@+id/wallet_float_button_profile"
                android:layout_below="@+id/wallet_any_loyalty_program"
                android:layout_width="@dimen/round_button40"
                android:layout_height="@dimen/round_button40"
                android:layout_marginTop="10dp"
                style="@style/FloatingActionButton"
                android:layout_centerHorizontal="true"
                android:visibility="gone"

                />

        </RelativeLayout>

    </ScrollView>


</FrameLayout>
