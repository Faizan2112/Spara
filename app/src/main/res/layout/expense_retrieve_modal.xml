<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    card_view:cardElevation="6dp"
    card_view:cardCornerRadius="10dp"
    >


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/colorAccent"
        >


        <TextView
            android:id="@+id/retrieve_expense_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ExpenseName"
            android:textColor="@color/primary_text_material_light"
            android:textSize="25sp"
            />
        <TextView
            android:id="@+id/retrieve_expense_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ExpenseCost"
             android:layout_alignParentBottom="true"
            android:textColor="@color/primary_text_material_light"
            android:textSize="25sp"

            />
         <TextView android:id="@+id/retrieve_expense_date"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_alignParentTop="true"
             android:text="Date"
             android:textColor="@color/primary_text_material_light"
             android:textSize="20dp"
             />
        <TextView android:id="@+id/retrieve_expense_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="20:30"
            android:textColor="@color/primary_text_material_light"
            android:textSize="20dp"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>
